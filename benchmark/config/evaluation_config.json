{
  "benchmark_name": "HDH-Bench",
  "version": "1.0.0",
  "description": "Healthcare Data Harmonization Benchmark",

  "evaluation_dimensions": {
    "information_mode": {
      "description": "How much API information is provided to agent",
      "variants": {
        "full_catalog": {
          "description": "Full API catalog with endpoints, schemas, examples",
          "provides": ["api_catalog.json", "fhir_cheatsheet.md"]
        },
        "minimal": {
          "description": "Only base URLs, agent must discover capabilities",
          "provides": ["base_urls.json"]
        },
        "discovery": {
          "description": "No information, agent must discover systems",
          "provides": []
        }
      }
    },
    "interaction_mode": {
      "description": "Single vs multi-turn interactions",
      "variants": {
        "single_turn": {
          "description": "Agent gets one chance to respond",
          "max_turns": 1
        },
        "multi_turn": {
          "description": "Agent can iterate up to max_turns",
          "max_turns": 20
        },
        "unlimited": {
          "description": "No turn limit (for research)",
          "max_turns": 100
        }
      }
    },
    "reasoning_mode": {
      "description": "How agent should express reasoning",
      "variants": {
        "natural_language": {
          "description": "Agent reasons in natural language, executes tools"
        },
        "code_generation": {
          "description": "Agent generates Python/curl code to execute"
        },
        "hybrid": {
          "description": "Agent can use either approach"
        }
      }
    },
    "hint_level": {
      "description": "How many hints to provide",
      "variants": {
        "none": {"hints_provided": 0},
        "minimal": {"hints_provided": 1},
        "moderate": {"hints_provided": 2},
        "full": {"hints_provided": 3}
      }
    }
  },

  "default_configuration": {
    "information_mode": "full_catalog",
    "interaction_mode": "multi_turn",
    "reasoning_mode": "hybrid",
    "hint_level": "none"
  },

  "metrics": {
    "primary": {
      "success_rate": {
        "description": "Percentage of tasks fully completed",
        "formula": "successful_tasks / total_tasks",
        "range": [0, 1]
      }
    },
    "secondary": {
      "progress_rate": {
        "description": "Average percentage of sub-goals completed",
        "formula": "sum(completed_subgoals) / sum(total_subgoals)",
        "range": [0, 1]
      },
      "f1_patient_matching": {
        "description": "F1 score for patient identity matching tasks",
        "formula": "2 * (precision * recall) / (precision + recall)",
        "range": [0, 1]
      },
      "action_completion": {
        "description": "Did agent accomplish the stated goal?",
        "formula": "goals_achieved / goals_stated",
        "range": [0, 1]
      }
    },
    "efficiency": {
      "avg_turns": {
        "description": "Average API calls per successful task",
        "lower_is_better": true
      },
      "avg_cost": {
        "description": "Average token cost per task (USD)",
        "lower_is_better": true
      },
      "avg_time": {
        "description": "Average time per task (seconds)",
        "lower_is_better": true
      }
    }
  },

  "scoring": {
    "category_weights": {
      "patient_matching": 0.25,
      "cross_system_integration": 0.20,
      "cohort_building": 0.20,
      "data_quality": 0.15,
      "data_provenance": 0.12,
      "terminology": 0.08
    },
    "difficulty_multipliers": {
      "easy": 1.0,
      "medium": 1.5,
      "hard": 2.0,
      "expert": 3.0
    },
    "aggregate_formula": "weighted_sum(category_scores * difficulty_multipliers)"
  },

  "leaderboard": {
    "primary_sort": "success_rate",
    "secondary_sort": "progress_rate",
    "display_metrics": [
      "success_rate",
      "progress_rate",
      "f1_patient_matching",
      "avg_turns",
      "avg_cost"
    ],
    "breakdown_by": ["category", "difficulty"]
  }
}
